pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Setting up my application environment.'
            }
        }
        stage('Dev') {
            steps {
                echo 'Developping the features of my app.'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing features and use cases of my app.'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing the app on production environment.'
            }
        }
    }
}
